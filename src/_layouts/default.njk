<!doctype html>
<html>
    <head>

        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">

        <title>{{ title }}</title>
        <meta name="description" content="{{ description }}">
        {% if canonical %}<link rel="canonical" href="{{ canonical }}">{% endif %}

        {# Stylesheets #}
        {% for href in site.stylesheets %}
            <link rel="stylesheet" href="{{ href }}">
        {% endfor %}

        {% for href in stylesheets %}
            <link rel="stylesheet" href="{{ href }}">
        {% endfor %}

        {% for src in site.scripts %}
            <script src="{{ src }}" defer></script>
        {% endfor %}

        {% for src in scripts %}
            <script src="{{ src }}" defer></script>
        {% endfor %}

        <link rel="shortcut icon" type="image/png" href="/assets/images/icons/favicon.png">

        <script type="application/ld+json"></script>

    </head>
    <body class="{{ bodyClass }}">

        <div class="page">
            <aside class="sidebar">
                <ul class="flow">
                    {% for section in collections.docs %}
                        <li class="flow --space-3">
                            <h2 class="text-base">{{ section.data.title }}</h2>

                            <ul class="flow --space-1 | text-sm px-6">
                                {% for page in collections[section.fileSlug] %}
                                    <li>
                                        <a class="c-blue-500" href="{{ page.url }}">{{ page.data.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </aside>
            <main class="px-20 py-16">
                <div class="flow | container">
                    <h1>{{ title }}</h1>
                    {{ content | safe }}
                </div>
            </main>
        </div>

        <a class="cg | c-grey-500" href="https://underscores.dev">
            {% include "svg/cg.svg" %}
        </a>

    </body>
</html>